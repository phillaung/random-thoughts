<%- include('./partials/header.ejs') %>

<h3>Recent</h3>
<% if (recipes.length) { %>
    <% recipes.forEach(function (rec) { %>
    <div class="col-6 col-sm-4 col-md-3">
        <div class="card">
            <img class="card-img-top" src="https://cdn.pixabay.com/photo/2017/11/10/05/24/add-2935429_640.png">
            <p class="card-title p-1 m-1"><%= rec.name %></p>
            <img src="<%= rec.user.avatar %>" class="img-home-avatar m-1">
            <a href="/recipes/<%= rec._id %>" class="stretched-link"></a>
        </div>
    </div>
    <% }) %>
<% } %>

<%- include('./partials/footer.ejs') %>