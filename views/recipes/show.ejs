<%- include('../partials/header.ejs') %>

<h3 class="text-center"><%= recipe.name %></h3>
<hr/>
<p><strong><%= recipe.description %></strong></p>
<p>Ingredients</p>
<ul>
    <% recipe.ingredients.forEach(function (ing) { %>
        <li><%= ing %></li>
    <% }) %>
</ul>
<p class="mb-2">Instructions</p>
<ol class="list-group list-group-numbered borderless">
    <% recipe.instructions.forEach(function (ins) { %>
        <li class="list-group-item"><%= ins %></li>
    <% }) %>
</ol>
<br/>
<img src="<%= recipe.user.avatar %>" class="img-home-avatar">
<p class="d-inline"><%= recipe.user.name %></p>

<%- include('../partials/footer.ejs') %>